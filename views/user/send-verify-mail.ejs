<%- contentFor('cssLinks') %>
<link rel="stylesheet" href="/public/css/login.css">


<%- contentFor('body') %>
<section class="vh-100">
    <div class="container-fluid h-custom">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-9 col-lg-6 col-xl-5">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
            class="img-fluid" alt="Sample image">
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">

            <h1>Send Verify Mail</h1>
            <br>

            <% if(locals.errors){  %>
              <div class="alert alert-danger">
                  <%=errors%>
              </div>
            <% }else{ %>
                <div class="alert alert-success">Verify code sucessfuly sent to your email! </div>
              <% } %>
  
                





            <!-- Email input -->
              

            <div class="d-flex justify-content-between align-items-center">
              <!-- Checkbox -->
              
  
            <div class="text-center text-lg-start mt-4 pt-2">
              <a type="submit" class="btn btn-primary btn-lg"
                style="padding-left: 2.5rem; padding-right: 2.5rem;" href="/admin/send-verify-mail">Send Again</a>
              <p class="small fw-bold mt-2 pt-1 mb-0">Wan't to logout ?
                <form action="/user/logout"  method="POST" > <input type="hidden" name="_token" value="<%=_token%>"> <button style="border:none;background:transparent;" type="submit" class="link-danger">Logout</button> </form></p>
            </div>
  
       </div>
      </div>
    </div>
    <div
      class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-primary">
